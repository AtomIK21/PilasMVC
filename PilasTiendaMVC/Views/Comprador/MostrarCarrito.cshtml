@model PilasTiendaMVC.Pilas.Entities.Pila

<h2>Comprar Producto</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p>@ViewBag.ErrorMessage</p>
}
else
{
    using (Html.BeginForm("Comprar", "Comprador", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.PilaId)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            <p>@Model.Nombre</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion)
            <p>@Model.Descripcion</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha)
            <p>@Model.Fecha</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Imagen)
            <p>@Model.Imagen</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Stock)
            @Html.TextBoxFor(model => model.Stock, new { @class = "form-control" })
        </div>
        <br>
        @Html.ActionLink("Comprar", "Comprar" , new { Cantidad = Model.Stock })
    }
}
